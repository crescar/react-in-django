{
  "name": "testdjango",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
  "build": "esbuild ui/index.tsx --bundle --platform=browser --outfile=static/js/index.js",
  "build:watch": "esbuild ui/index.tsx --bundle --platform=browser --outfile=static/js/index.js --watch",
  "server": "nodemon --ext py --exec \"python manage.py runserver\"",
  "livereload": "livereload static/ templates/ --wait 100",
  "dev": "concurrently \"npm run build:watch\" \"npm run server\" \"npm run livereload\""
  },
